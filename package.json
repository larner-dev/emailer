{
  "name": "@larner.dev/emailer",
  "description": "A library for sending templated mjml emails with nodemailer.",
  "version": "1.3.0",
  "author": "Aaron Larner",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    }
  },
  "scripts": {
    "dev": "concurrently \"tsc --watch\" \"vite build --watch\"",
    "build": "tsc --declaration && vite build",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint .",
    "postversion": "git push && git push --tags",
    "prepare": "yarn build",
    "prepublishOnly": "yarn test && yarn build",
    "test": "vitest --run --dir ./src",
    "test-watch": "vitest --dir ./src",
    "test-coverage": "vitest run --dir ./src --coverage"
  },
  "devDependencies": {
    "@types/mjml": "4.7.4",
    "@types/node": "20.11.17",
    "@types/nodemailer": "6.4.14",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "@vitest/coverage-c8": "0.33.0",
    "concurrently": "8.2.2",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "nodemon": "3.0.3",
    "prettier": "3.2.5",
    "rollup-plugin-node-externals": "7.0.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vite-plugin-dts": "3.7.2",
    "vitest": "1.2.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "handlebars": "^4.7.8",
    "mjml": "^4.15.3",
    "nodemailer": "^6.9.9",
    "validator": "^13.11.0"
  }
}
